package com.project.mediverse.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import com.project.mediverse.entity.Medicine;

@Repository
public interface MedicineRepository extends JpaRepository<Medicine, Long> {

    // Find medicines by category
    List<Medicine> findByCategory(String category);

    // Find medicines by name
    Medicine findByName(String name);

    // Find medicines that are low in stock
    List<Medicine> findByStockQuantityLessThan(int quantity);
    
    List<Medicine> findByNameContaining(String name);
    
    List<Medicine> findByNameContainingAndCategory(String name, String category);
}