package com.project.mediverse.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.project.mediverse.entity.Medicine;
import com.project.mediverse.repository.MedicineRepository;

import java.util.List;
import java.util.Optional;

@Service
public class MedicineService {

    @Autowired
    private MedicineRepository medicineRepository;

    // Create or update a medicine
    public Medicine saveMedicine(Medicine medicine) {
        return medicineRepository.save(medicine);
    }

    // Get a medicine by ID
    public Optional<Medicine> getMedicineById(int medicineId) {
        return medicineRepository.findById(medicineId);
    }

    // Get all medicines
    public List<Medicine> getAllMedicines() {
        return medicineRepository.findAll();
    }

    // Find medicines by category
    public List<Medicine> getMedicinesByCategory(String category) {
        return medicineRepository.findByCategory(category);
    }

    // Delete a medicine by ID
    public void deleteMedicine(int medicineId) {
        medicineRepository.deleteById(medicineId);
    }

    // Update medicine by ID
    public Medicine updateMedicineById(int medicineId, Medicine updatedMedicine) {
        if (medicineRepository.existsById(medicineId)) {
            updatedMedicine.setMedicineId(medicineId);
            return medicineRepository.save(updatedMedicine);
        } else {
            return null; // Medicine not found
        }
    }
}

