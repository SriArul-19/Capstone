package com.project.mediverse.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

import com.project.mediverse.entity.Credential;
import com.project.mediverse.entity.Medicine;
import com.project.mediverse.service.MedicineService;

@Controller
@RequestMapping("/user")
public class CustomerController 
{
	@Autowired 
	private MedicineService medicineService;
	@GetMapping("/home")
    public ModelAndView showHomePage() 
    {
        return new ModelAndView("UserHomePage");
    }
    @GetMapping("/invalid")
    public ModelAndView showInvalidPage() 
    {
        return new ModelAndView("InvalidPage");
    }
    @GetMapping("/profile")
    public ModelAndView showUserProfilePage()
    {
    	return new ModelAndView("UserProfilePage");
    }
    @GetMapping("/order")
    public ModelAndView showUserOrderPage()
    {
    	return new ModelAndView("UserOrderPage");
    }
    @GetMapping("/search")
    public String searchMedicine(@RequestParam("searchQuery") String query, Model model)
    {
        // 1. Try to search by exact medicine name (case-insensitive via service/repository)
        Medicine medicineByName = medicineService.getMedicineByName(query);
        
        List<Medicine> searchResults = null;
        
        if (medicineByName != null) {
            // Found by name
            searchResults = List.of(medicineByName);
        } else {
            // 2. If not found by name, try to search by category (case-insensitive via service/repository)
            searchResults = medicineService.getMedicinesByCategory(query);
        }
        
        // *Optional Enhancement: If the user provides a partial search query, 
        // you might want to implement a LIKE search here if no exact match was found.*
        
        model.addAttribute("searchResults", searchResults);
        model.addAttribute("searchQuery", query);
        
        return "MedicineSearchResult";
    }
}
