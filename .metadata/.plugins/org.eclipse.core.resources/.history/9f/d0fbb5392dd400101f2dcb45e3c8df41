package com.project.mediverse.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.project.mediverse.entity.Medicine;
import com.project.mediverse.repository.MedicineRepository;

import java.util.List;
import java.util.Optional;

@Service
public class MedicineService {

    @Autowired
    private MedicineRepository medicineRepository;

    // Add or update a medicine
    public Medicine saveMedicine(Medicine medicine) {
        return medicineRepository.save(medicine);
    }

    // Get a medicine by ID
    public Optional<Medicine> getMedicineById(Long medicineId) {
        return medicineRepository.findById(medicineId);
    }

    // Get all medicines
    public List<Medicine> getAllMedicines() {
        return medicineRepository.findAll();
    }

    // Delete a medicine by ID
    public void deleteMedicine(Long medicineId) {
        medicineRepository.deleteById(medicineId);
    }

    // Update stock quantity for a medicine
    public Medicine updateStock(Long medicineId, int newStock) {
        Optional<Medicine> medicine = medicineRepository.findById(medicineId);
        if (medicine.isPresent()) {
            medicine.get().setStockQuantity(newStock);
            return medicineRepository.save(medicine.get());
        }
        return null;
    }
}
