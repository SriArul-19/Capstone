    <script>
        // Toggle Insurance Claim fields
        function toggleInsuranceDetails() {
            const insuranceClaim = document.getElementById("insuranceClaim");
            const insuranceDetails = document.getElementById("insuranceDetails");
            insuranceDetails.style.display = insuranceClaim.checked ? "block" : "none";
        }

        // Toggle Debit Card fields
        document.getElementById("paymentMethod").addEventListener("change", function() {
            const paymentMethod = this.value;
            const debitCardDetails = document.getElementById("debitCardDetails");
            debitCardDetails.style.display = paymentMethod === "debitCard" ? "block" : "none";
        });

        // Validate Insurance Claim
        function validateInsuranceClaim() {
            const claimId = document.getElementById("insuranceClaimId").value;
            alert("Validating Insurance Claim ID: " + claimId);
        }

        // Validate Debit Card
        function validateCard() {
            const cardNumber = document.getElementById("cardNumber").value;
            alert("Validating Card: " + cardNumber);
        }
    </script>

