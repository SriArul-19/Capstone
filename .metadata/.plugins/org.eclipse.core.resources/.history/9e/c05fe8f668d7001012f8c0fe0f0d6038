    <section class="buy-section">
        <h2>Buy Medicine</h2>

        <form action="/user/completePurchase" method="post" id="buy-form">
            <input type="hidden" name="medicineId" value="${medicine.id}" />
            
            <!-- Select Quantity -->
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" min="1" required />

            <!-- Delivery Address -->
            <label for="address">Delivery Address:</label>
            <textarea id="address" name="address" required></textarea>

            <!-- Insurance Claim -->
            <label for="insuranceClaim">Do you have Insurance Claim?</label>
            <input type="checkbox" id="insuranceClaim" name="insuranceClaim" onchange="toggleInsuranceDetails()">
            <div id="insuranceDetails" style="display: none;">
                <label for="insuranceClaimId">Insurance Claim ID:</label>
                <input type="text" id="insuranceClaimId" name="insuranceClaimId" />
                <button type="button" onclick="validateInsuranceClaim()">Validate Insurance Claim</button>
            </div>

            <!-- Payment Method -->
            <label for="paymentMethod">Payment Method:</label>
            <select name="paymentMethod" id="paymentMethod" required>
                <option value="debitCard">Debit Card</option>
                <option value="cashOnDelivery">Cash on Delivery</option>
            </select>

            <!-- Debit Card Details (shown if Debit Card is selected) -->
            <div id="debitCardDetails" style="display: none;">
                <label for="cardNumber">Card Number:</label>
                <input type="text" id="cardNumber" name="cardNumber" required />

                <label for="cvv">CVV:</label>
                <input type="text" id="cvv" name="cvv" required />

                <label for="cardHolderName">Card Holder Name:</label>
                <input type="text" id="cardHolderName" name="cardHolderName" required />

                <label for="expiryMonth">Expiry Month:</label>
                <input type="text" id="expiryMonth" name="expiryMonth" required />

                <label for="expiryYear">Expiry Year:</label>
                <input type="text" id="expiryYear" name="expiryYear" required />

                <button type="button" onclick="validateCard()">Validate Card</button>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn pay-btn">Pay Now</button>
        </form>
